import java.util.Random;

class SavingsAccount extends BankDetails {
    private static final double INTEREST_RATE = 0.03; // Example interest rate: 3%

    @Override
    public void openAccount() {
        Random random = new Random();
        accno = "SAV" + (100000 + random.nextInt(900000));
        System.out.print("Enter Name: ");
        name = sc.next();
        System.out.println("Savings Account created successfully!");
        System.out.println("Account Number: " + accno);
        System.out.println("Initial Balance: " + balance);
    }

    // Method to apply interest to the account balance
    public void applyInterest() {
        if (balance > 0) {
            double interest = balance * INTEREST_RATE;
            balance += interest;
            System.out.println("Monthly interest of " + interest + " applied to account: " + accno);
        }
    }
}
