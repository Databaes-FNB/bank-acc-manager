import java.util.Scanner;
import java.util.Random;

class BankDetails {
    private String accno; // Automatically generated account number
    private String name;
    private String acc_type;
    private long savings_balance;
    private long cheque_balance;
    Scanner sc = new Scanner(System.in);

    // Method to open a new account
    public void openAccount() {
        Random random = new Random();
        accno = String.valueOf(1000000000L + (long) (random.nextDouble() * 9000000000L)); // Generate random 10-digit account number

        System.out.print("Enter Account type: ");
        acc_type = sc.next();
        System.out.print("Enter Name: ");
        name = sc.next();
        System.out.print("Enter Savings Balance: ");
        savings_balance = sc.nextLong();
        System.out.print("Enter Cheque Balance: ");
        cheque_balance = sc.nextLong();

        System.out.println("Account created successfully! Your Account Number is: " + accno);
    }

    // Method to display account details
    public void showAccount() {
        System.out.println("Name of account holder: " + name);
        System.out.println("Account no.: " + accno);
        System.out.println("Account type: " + acc_type);
        System.out.println("Savings Balance: " + savings_balance);
    }

    // Method to deposit money
    public void deposit() {
        long amt;
        System.out.println("Enter the amount you want to deposit: ");
        amt = sc.nextLong();
        if (amt > 0) {
            savings_balance += amt;
            System.out.println("Amount deposited successfully! New Savings Balance: " + savings_balance);
        } else {
            System.out.println("Invalid deposit amount.");
        }
    }

    // Method to transfer money
    public void transfer() {
        long amt;
        System.out.println("Enter the amount you want to transfer: ");
        amt = sc.nextLong();
        if (amt > 0 && amt <= savings_balance) {
            savings_balance -= amt;
            cheque_balance += amt;
            System.out.println("Transferred: " + amt);
            System.out.println("New Savings Balance: " + savings_balance);
            System.out.println("New Cheque Balance: " + cheque_balance);
        } else {
            System.out.println("Invalid transfer amount or insufficient balance.");
        }
    }

    // Method to withdraw money
    public void withdrawal() {
        long amt;
        System.out.println("Enter the amount you want to withdraw: ");
        amt = sc.nextLong();
        if (savings_balance >= amt && amt > 0) {
            savings_balance -= amt;
            System.out.println("Amount withdrawn successfully! New Savings Balance: " + savings_balance);
        } else {
            System.out.println("Invalid withdrawal amount or insufficient balance.");
        }
    }

    // Method to search for an account by number
    public boolean search(String ac_no) {
        if (accno.equals(ac_no)) {
            showAccount();
            return true;
        }
        return false;
    }
}

public class BankingApp {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Create initial accounts
        System.out.print("How many customers do you want to input? ");
        int n = sc.nextInt();
        BankDetails[] C = new BankDetails[n];
        for (int i = 0; i < C.length; i++) {
            C[i] = new BankDetails();
            C[i].openAccount();
        }

        // Loop runs until user chooses to exit
        int ch;
        do {
            System.out.println("\n*** Banking System Application ***");
            System.out.println("1. Display all account details");
            System.out.println("2. Search by Account Number");
            System.out.println("3. Deposit the amount");
            System.out.println("4. Withdraw the amount");
            System.out.println("5. Transfer the amount");
            System.out.println("6. Exit");
            System.out.print("Enter your choice: ");
            ch = sc.nextInt();

            switch (ch) {
                case 1:
                    for (BankDetails account : C) {
                        account.showAccount();
                    }
                    break;
                case 2:
                    System.out.print("Enter account number to search: ");
                    String ac_no = sc.next();
                    boolean found = false;
                    for (BankDetails account : C) {
                        found = account.search(ac_no);
                        if (found) {
                            break;
                        }
                    }
                    if (!found) {
                        System.out.println("Search failed! Account doesn't exist.");
                    }
                    break;
                case 3:
                    System.out.print("Enter account number: ");
                    ac_no = sc.next();
                    found = false;
                    for (BankDetails account : C) {
                        found = account.search(ac_no);
                        if (found) {
                            account.deposit();
                            break;
                        }
                    }
                    if (!found) {
                        System.out.println("Search failed! Account doesn't exist.");
                    }
                    break;
                case 4:
                    System.out.print("Enter account number: ");
                    ac_no = sc.next();
                    found = false;
                    for (BankDetails account : C) {
                        found = account.search(ac_no);
                        if (found) {
                            account.withdrawal();
                            break;
                        }
                    }
                    if (!found) {
                        System.out.println("Search failed! Account doesn't exist.");
                    }
                    break;
                case 5:
                    System.out.print("Enter account number: ");
                    ac_no = sc.next();
                    found = false;
                    for (BankDetails account : C) {
                        found = account.search(ac_no);
                        if (found) {
                            account.transfer();
                            break;
                        }
                    }
                    if (!found) {
                        System.out.println("Search failed! Account doesn't exist.");
                    }
                    break;
                case 6:
                    System.out.println("Thank you for using the Banking System. Goodbye!");
                    break;
                default:
                    System.out.println("Invalid choice!");
            }
        } while (ch != 6);
    }
}
